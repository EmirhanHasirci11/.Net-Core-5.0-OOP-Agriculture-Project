@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout_.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Resim Paneli</h4>
                <p class="card-description">
                    Yeni Resim Girişi
                </p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputPassword4">Resim Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" id="exampleInputPassword4" placeholder="Personel Unvanı">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Resim açıklaması</label>
                        <input type="text" class="form-control" asp-for="Description" id="exampleInputPassword4" placeholder="Personel Unvanı">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Resim Bağlantısı</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputPassword4" placeholder="Personel resim bağlantısını ">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-info me-2">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

