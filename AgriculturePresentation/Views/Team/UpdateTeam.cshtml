@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout_.cshtml";
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Personel Paneli</h4>
                <p class="card-description">
                    Yeni personel girişi
                </p>
                <form class="forms-sample" method="post">
                    @Html.HiddenFor(x=>x.TeamID)
                    <div class="form-group">
                        <label for="exampleInputName1">Personel Adı</label>
                        <input type="text" class="form-control" asp-for="PersonName" id="exampleInputName1" placeholder="Personel Adı">
                        <span asp-validation-for="PersonName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Personel Soyadı</label>
                        <input type="text" class="form-control" asp-for="PersonSurName" id="exampleInputEmail3" placeholder="Personel Soyadı">
                        <span asp-validation-for="PersonSurName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Unvanı</label>
                        <input type="text" class="form-control" asp-for="Title" id="exampleInputPassword4" placeholder="Personel Unvanı">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Resim Bağlantısı</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputPassword4" placeholder="Personel resim bağlantısını ">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Websitesi bağlantısı</label>
                        <input type="text" class="form-control" asp-for="WebsiteUrl" id="exampleInputPassword4" placeholder="Personel Websitesi">
                        <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Facebook Bağlantısı</label>
                        <input type="text" class="form-control" asp-for="FacebookUrl" id="exampleInputPassword4" placeholder="Personel facebook">
                        <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Twitter Bağlantısı</label>
                        <input type="text" class="form-control" asp-for="TwitterUrl" id="exampleInputPassword4" placeholder="Personel Twitter">
                        <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Personel Instagram Bağlantısı</label>
                        <input type="text" class="form-control" asp-for="InstagramUrl" id="exampleInputPassword4" placeholder="Personel Instagram">
                        <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-info me-2">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</body>


